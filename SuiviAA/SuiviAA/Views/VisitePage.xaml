<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuiviAA.Views.VisitePage">

    <ScrollView>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Cabinet"></Label>
            <Picker 
                x:Name="cabPicker"
                ItemsSource="{}"></Picker>
            <Label Text="Medecin"></Label>
            <Picker x:Name="medPicker"></Picker>
            <Label Text="Date"></Label>
            <DatePicker></DatePicker>
            <StackLayout HorizontalOptions="FillAndExpand"
                         Orientation="Horizontal">
                <Label Text="Sur rendez-vous?"></Label>
                <Switch></Switch>
            </StackLayout>
            <Label Text="Heure d'arrivée"></Label>
            <TimePicker></TimePicker>
            <Label Text="Heure début"></Label>
            <TimePicker></TimePicker>
            <Label Text="Heure depart"></Label>
            <TimePicker></TimePicker>
            <Button Text="Valider"></Button>
        </StackLayout>
    </ScrollView>

</ContentPage>